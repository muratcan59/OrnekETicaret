    <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Sign up</h4>
                    <button type="button" class="close" data-dismiss="modal" id="formKapat" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <i class="fas fa-user prefix grey-text"></i>
                        <input type="text" id="ad" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="orangeForm-name">Ad</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="fas fa-user prefix grey-text"></i>
                        <input type="text" id="soyad" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="orangeForm-name">Soyad</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="fas fa-user prefix grey-text"></i>
                        <input type="text" id="telefon" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="orangeForm-name">Telefon</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="fas fa-envelope prefix grey-text"></i>
                        <input type="email" id="email" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="orangeForm-email">Email</label>
                    </div>

                    <div class="md-form mb-4">
                        <i class="fas fa-lock prefix grey-text"></i>
                        <input type="password" id="sifre" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">Şifre</label>
                    </div>
                    <div class="md-form mb-4">
                        <i class="fas fa-lock prefix grey-text"></i>
                        <input type="password" id="sifreTekrar" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">Şifre Tekrar</label>
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-deep-orange" onclick="Kaydet()">Kaydol</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/MyScripts")
    @RenderSection("jsDosyalari", false)

    <script>

        function Kaydet() {
            var adi = $("#ad").val();
            var soyadi = $("#soyad").val();
            var telefonu = $("#telefon").val();
            var maili = $("#email").val();
            var sifresi = $("#sifre").val();
            var sifresi2 = $("#sifreTekrar").val();
            if (sifresi != sifresi2) {
                alert("Şifreler uyuşmuyor.")
                return;
            }

            var Kullanici = {
                Ad: adi,
                Soyad: soyadi,
                Telefon: telefonu,
                Email: maili,
                Sifre: sifresi,
                IsDelete:false
            }; 

            var jsonData = JSON.stringify(Kullanici);

            $.ajax({
                url: "http://localhost:44371/api/kullanici",
                type: "POST",
                data: jsonData,
                headers: {
      'Accept': 'application/json',
      'Content-Type': 'application/json'
    },
                success: function (result) {
                    console.log(result);
                    if (result == true) {
                        $("#formKapat").trigger("click");
                        alert("Kullanıcı kaydedildi.");
                    }
                },
                error: function (data) {
                    console.log(data);
                }, 
                fail: function (data) {
                    console.log(data);
                }
            })

        }

    </script>




